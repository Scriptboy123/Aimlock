local a={Offsets={["FarRange"]=-0.6,["CloseRange"]=-0.9,["Prediction"]=7},Visuals={["FOV"]=false,["Color"]=Color3.fromRGB(255,126,76)},["AimPart"]="Head",["FarRangeKeybind"]=Enum.KeyCode.Q,["CloseRangeKeybind"]=Enum.KeyCode.Z}local b={CloseRangeAiming=false,FarRangeAiming=false}local c=game:GetService("Players")local d=game:GetService("RunService")local e=game:GetService("UserInputService")local f=c.LocalPlayer;local g=workspace.CurrentCamera;local h=f.GetMouse(f)local i;local j=Drawing.new("Circle")j.Radius=a.Visuals.FOV;j.Visible=true;j.Color=a.Visuals.Color;j.NumSides=1.7;j.Thickness=3;function GetClosestPlayerToCursor(k)local l,m=k or math.huge;for n,o in pairs(c.GetPlayers(c))do if o~=f then if o.Character and f.Character then local p=o.Character.PrimaryPart;if p then local q,r=g.WorldToScreenPoint(g,p.Position)local s=(Vector2.new(h.X,h.Y)-Vector2.new(q.X,q.Y)).Magnitude;if r and s<l then l=s;m=o end end end end end;return m end;e.InputBegan:Connect(function(t,u)if u then return end;if t.UserInputType==Enum.UserInputType.Keyboard and t.KeyCode==a.CloseRangeKeybind then b.CloseRangeAiming=not b.CloseRangeAiming;i=GetClosestPlayerToCursor(a.Visuals.FOV)end;if t.UserInputType==Enum.UserInputType.Keyboard and t.KeyCode==a.FarRangeKeybind then b.FarRangeAiming=not b.FarRangeAiming;i=GetClosestPlayerToCursor(a.Visuals.FOV)end end)d.RenderStepped:Connect(function()if i then if not i.Character then i=nil end;local q,r=g.WorldToScreenPoint(g,i.Character[a.AimPart].Position)if not r then i=nil end;if b.CloseRangeAiming then local v=i.Character[a.AimPart].CFrame*CFrame.new(0,a.Offsets.CloseRange,-a.Offsets.Prediction)g.CFrame=CFrame.new(g.CFrame.p,v.p)end;if b.FarRangeAiming then local v=i.Character[a.AimPart].CFrame*CFrame.new(0,a.Offsets.FarRange,-a.Offsets.Prediction)g.CFrame=CFrame.new(g.CFrame.p,v.p)end end end)
